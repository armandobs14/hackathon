script#home(type='text/ng-template')
  //.hero(layout="column", layout-align="center center")
    h1 Bem Vindo!

  div(ng-show="incidents", ng-repeat="incident in incidents")
    md-card
      md-card-title
        md-card-title-text
          span.md-headline {{incident.title}}
      md-card-content
        p {{incident.description}}
      md-card-actions(layout='row', layout-align='end center')
        md-button Verdade
        md-button Mentira
        md-button.md-icon-button(aria-label='palce',ng-click="showOnMap(incident)")
          md-icon.material-icons place

  //md-button.md-fab.md-primary(aria-label='Novo Incidente')
    md-icon.material-icons add


